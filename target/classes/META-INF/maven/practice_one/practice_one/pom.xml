    </dependency>

  
    <!-- JUnit for Running Tests -->
    <dependency>
        <groupId>junit</groupId>
        <artifactId>junit</artifactId>
        <version>4.13.2</version>
        <scope>test</scope>
    </dependency>

    <!-- If using TestNG -->
    <dependency>
        <groupId>org.testng</groupId>
